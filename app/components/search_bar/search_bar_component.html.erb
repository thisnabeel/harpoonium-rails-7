<div class="flex mt-8" data-controller="search-bar">
  <div class="flex-grow w-2/5">
    <input type="text" placeholder="Search Books" class="text-2xl rounded shadow p-4 bg-slate-200 border-0 w-full focus:bg-slate-100">
  </div>
  <div class="w-1/5">
    <div class="maps-btn hvr-bob-anyways"><svg class="" style="margin: 0 auto; height:1em;vertical-align:-.125em;transform-origin:center;overflow:visible" viewBox="0 0 576 512" aria-hidden="true" role="img" xmlns="http://www.w3.org/2000/svg"><g transform="translate(288 256)" transform-origin="144 0"><g transform="translate(0,0) scale(1,1)"><path d="M384 476.1L192 421.2V35.9L384 90.8V476.1zm32-1.2V88.4L543.1 37.5c15.8-6.3 32.9 5.3 32.9 22.3V394.6c0 9.8-6 18.6-15.1 22.3L416 474.8zM15.1 95.1L160 37.2V423.6L32.9 474.5C17.1 480.8 0 469.2 0 452.2V117.4c0-9.8 6-18.6 15.1-22.3z" fill="currentColor" transform="translate(-288 -256)"></path></g></g></svg></div>
  </div>
  <div class="flex-grow w-2/5">
 
    <%= link_to sample_chapters_path, data: { turbo_frame: "chapters-sample" } do %>
        <input type="text" data-action="blur->search-bar#hide" placeholder="Search Chapters" class="text-2xl rounded shadow p-4 bg-slate-200 border-0 w-full focus:bg-slate-100">
    <% end %>

    <%= tag.turbo_frame(id: "chapters-sample") %>

  </div>
</div>



<style>
.chapters-sample {
    position: absolute;
    background: #fff;
    list-style: none;
    padding: 2px;
    border: 2px solid #000;
    width: 100%;
    z-index: 999;
}
.chapters-sample li {
    padding: 10px;
}

.chapters-sample li:hover {
    background: #ccc;
}
.maps-btn {
    margin: 0px 8px;
    top: 8px;
    position: relative;
    zoom: 1;
    padding: 2px 0;
    height: 72%;
    cursor: pointer;
    border: 1px solid #bbb;
    overflow: visible;
    text-decoration: none;
    white-space: nowrap;
    text-align: center;
    font-size: 34px;
    color: #416fff;
    background-color: #ddd;
    background-image: -webkit-linear-gradient(top,rgba(255,255,255,1),rgba(255,255,255,0));
    border-radius: 6px;
    box-shadow: 0 1px #0000004d, 0 2px 2px -1px #0000007f, 0 1px #ffffff4d inset;
    text-shadow: 0 1px 0 rgb(255 255 255 / 90%);
    transition: background-color .2s ease-out;
    background-clip: padding-box;
}

.hvr-bob-anyways {
    -webkit-animation-name: hvr-bob-float,hvr-bob;
    animation-name: hvr-bob-float, hvr-bob;
    -webkit-animation-duration: .5s,3.5s;
    animation-duration: .5s,3.5s;
    -webkit-animation-delay: 0s,.5s;
    animation-delay: 0s,.5s;
    -webkit-animation-timing-function: ease-out,ease-in-out;
    animation-timing-function: ease-out,ease-in-out;
    -webkit-animation-iteration-count: 1,infinite;
    animation-iteration-count: 1,infinite;
    -webkit-animation-fill-mode: forwards;
    animation-fill-mode: forwards;
    -webkit-animation-direction: normal,alternate;
    animation-direction: normal,alternate;
        transform: perspective(1px) translateZ(0);
    box-shadow: 0 0 1px #0000;
}
</style>